# Pixie Investment Advisor Environment Variables

# OpenAI API Key (Required for AI chatbot)
OPENAI_API_KEY=your_openai_api_key_here

# Flask Secret Key (Required, minimum 32 characters)
FLASK_SECRET_KEY=minerva_investment_advisor_secure_key_2024_pixie_project

# Flask Environment
FLASK_ENV=development

# Supabase Configuration (Optional)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Clova API Key (Alternative to OpenAI)
CLOVA_API_KEY=your_clova_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///investment_data.db

# API Configuration
API_TIMEOUT=30
API_RETRY_COUNT=3

# Feature Flags
ENABLE_NEWS_SCHEDULER=false
ENABLE_DATA_SCHEDULER=false